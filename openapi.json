    "/users/login": {
      "post": {
        "summary": "Login",
        "operationId": "post-users-login",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "description": "",
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string",
                      "minLength": 1
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "minLength": 1
                        },
                        "username": {
                          "type": "string",
                          "minLength": 1
                        },
                        "firstName": {
                          "type": "string",
                          "minLength": 1
                        },
                        "lastName": {
                          "type": "string",
                          "minLength": 1
                        },
                        "email": {
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "required": [
                        "id",
                        "username",
                        "firstName",
                        "lastName",
                        "email"
                      ]
                    }
                  },
                  "required": [
                    "accessToken",
                    "user"
                  ],
                  "x-examples": {
                    "example-1": {
                      "accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6Ijc3NjljYWZkLTk5ZTgtNDRkZC05MDUxLWQxODgzYTBhNTBlMyIsInR5cGUiOiJBQ0NFU1MiLCJpYXQiOjE2NDkyNjYwMjcsImV4cCI6MTY0OTI2OTYyN30.9Xf-KvpKE7paowAAtco1NRUBPlBhoLfDEAViAIV-nYo",
                      "user": {
                        "id": "7769cafd-99e8-44dd-9051-d1883a0a50e3",
                        "username": "alice",
                        "firstName": "Alice",
                        "lastName": "Smith",
                        "email": "alice@example.com"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "description": "Login to your account\nThis will set 2 cookies\n1. access-token (HTTP only)\n2. user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "description": "",
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1
                  },
                  "password": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "username",
                  "password"
                ],
                "x-examples": {
                  "example-1": {
                    "username": "alice",
                    "password": "password"
                  }
                }
              }
            }
          }
        }
      }
