{
  "name": "node-starter",
  "version": "0.1.0",
  "description": "NodeJS starter",
  "author": "Ali Mehasin",
  "license": "GPL-3.0 License",
  "repository": {
    "url": "https://github.com/alimehasin/node-starter"
  },
  "keywords": [
    "NodeJS-starter"
  ],
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "bin": "dist/src/server.js",
  "pkg": {
    "scripts": "dist/*",
    "assets": "node_modules/swagger-ui-dist/*.(css|js)",
    "outputPath": "execs"
  },
  "scripts": {
    "dev": "nodemon --files src/server.ts",
    "build": "tsc",
    "build:exec": "npm run build && pkg .",
    "start": "node ./dist/src/server.js",
    "test": "jest --runInBand",
    "format": "prettier --write .",
    "lint": "eslint --ext .ts .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "command": "ts-node utils/commands.ts",
    "init": "npm i && ts-node bin/init.ts && prettier --write package.json",
    "create": "ts-node bin/create.ts"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@prisma/client": "^3.2.1",
    "bcrypt": "^5.0.1",
    "commander": "^8.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.6.0",
    "inquirer": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.0",
    "passport-strategy": "^1.0.0",
    "pkg": "^5.3.3",
    "swagger-ui-express": "^4.1.6",
    "zod": "^3.9.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.1.3",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.175",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.0",
    "@types/passport": "^1.0.7",
    "@types/passport-strategy": "^0.2.35",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.1",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "prisma": "^3.2.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  }
}
