{
  "name": "node-starter",
  "version": "0.1.0",
  "description": "Simple node starter with TypeScript and Prisma",
  "author": "Ali Mehasin",
  "license": "GPL-3.0",
  "bin": "dist/src/server.js",
  "private": true,
  "repository": {
    "url": "https://github.com/SoftshapeCode/node-starter"
  },
  "keywords": [
    "NodeJS-starter",
    "TypeScript",
    "Prisma",
    "Boilerplate"
  ],
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed"
  },
  "scripts": {
    "dev": "nodemon --files src/server.ts",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "start": "node ./dist/src/server.js",
    "test": "jest --runInBand",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext .ts .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "initialize": "yarn && ts-node bin/commands/initialize.ts && prettier --write package.json",
    "make": "ts-node bin/commands/make.ts",
    "clean:empties": "find src -type d -empty -delete",
    "clean": "rimraf dist && npm run clean:empties"
  },
  "dependencies": {
    "@casl/ability": "^5.4.4",
    "@casl/prisma": "^1.0.2",
    "@prisma/client": "^4.0.0",
    "bcrypt": "^5.0.1",
    "commander": "^9.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^2.0.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^10.1.0",
    "helmet": "^5.1.0",
    "inquirer": "^8.2.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "swagger-ui-express": "^4.4.0",
    "winston": "^3.8.1",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^28.1.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.3",
    "@types/passport": "^1.0.9",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
