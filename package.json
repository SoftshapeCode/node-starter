{
  "name": "node-starter",
  "version": "0.1.0",
  "description": "Simple node starter with TypeScript and Prisma",
  "author": "Ali Mehasin",
  "license": "GPL-3.0",
  "bin": "dist/src/server.js",
  "repository": {
    "url": "https://github.com/SoftshapeCode/node-starter"
  },
  "keywords": [
    "NodeJS-starter",
    "TypeScript",
    "Prisma",
    "Boilerplate"
  ],
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  },
  "pkg": {
    "assets": [
      ".env",
      "node_modules/bcrypt/lib/binding/napi-v3/bcrypt_lib.node"
    ]
  },
  "scripts": {
    "dev": "nodemon --files src/server.ts",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "start": "node ./dist/src/server.js",
    "test": "jest --runInBand",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext .ts .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "initialize": "yarn && ts-node bin/commands/initialize.ts && prettier --write package.json",
    "make": "ts-node bin/commands/make.ts",
    "clean:empties": "find src -type d -empty -delete",
    "clean": "rimraf dist && npm run clean:empties",
    "pkg": "yarn build && pkg ."
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@casl/prisma": "^1.0.1",
    "@prisma/client": "^3.12.0",
    "bcrypt": "^5.0.1",
    "commander": "^9.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^10.0.1",
    "helmet": "^5.0.2",
    "inquirer": "^8.2.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.7.2",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.181",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.23",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "pkg": "^5.5.2",
    "prettier": "^2.6.2",
    "prisma": "^3.12.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
