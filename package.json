{
  "name": "node-starter",
  "version": "0.1.0",
  "description": "Simple node starter with TypeScript and Prisma",
  "author": "Ali Mehasin",
  "license": "GPL-3.0",
  "repository": {
    "url": "https://github.com/SoftshapeCode/node-starter"
  },
  "keywords": [
    "NodeJS-starter",
    "TypeScript",
    "Prisma",
    "Boilerplate"
  ],
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  },
  "scripts": {
    "dev": "nodemon --files src/server.ts",
    "build": "tsc",
    "start": "node ./dist/src/server.js",
    "test": "jest --runInBand",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --ext .ts .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "initialize": "yarn && ts-node bin/commands/initialize.ts && prettier --write package.json",
    "make": "ts-node bin/commands/make.ts"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "@casl/prisma": "^1.0.1",
    "@prisma/client": "^3.10.0",
    "bcrypt": "^5.0.1",
    "commander": "^9.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cron": "^1.8.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "fs-extra": "^10.0.1",
    "helmet": "^5.0.2",
    "inquirer": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "passport-strategy": "^1.0.0",
    "swagger-ui-express": "^4.3.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.178",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.19",
    "@types/passport": "^1.0.7",
    "@types/passport-strategy": "^0.2.35",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prisma": "^3.10.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
